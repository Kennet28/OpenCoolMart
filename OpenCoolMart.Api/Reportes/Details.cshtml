@model OpenCoolMart.Domain.DTOs.VentaResponseDto
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Nota de venta</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
</head>
<body>
<div id="content">
    <img src="~/Img/Imagen3.png" class="ribbon">
</div>
<div class="container-xl">
    <div class="text-center table-title">
        <div class="form-row">
            <h2>Nota de Venta</h2>
        </div>
    </div>
    <div class=" form-group form-row">
        <label class="col-md-4">Folio de venta: @Model.Folio</label>
        <label class="col-md-5">Fecha de la venta: @Model.FechaVenta</label>
        <label class="col-md-6">Empleado: @Model.EmpleadoId</label>
    </div>
    
    <br />
    <div class="text-center"> Descripcion de venta</div>
    <div id="tabla">
        <table class="table table-bordered border-dark">
            <thead class="bg-dark text-white">
            <tr>
                <th>Codigo del producto</th>
                <th>Descripcion</th>
                <th>Precio Unitario</th>
                <th>Descuento</th>
                <th>Cantidad Comprada</th>
                <th>Importe</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.DetallesVentas)
            {
                <tr>
                    <td>@item.Producto.CodigoProducto</td>
                    <td>@item.Producto.Descripcion</td>
                    <td>@item.Producto.PrecioVenta</td>
                    <td>@item.Producto.Descuento</td>
                    <td>@item.CantiProd</td>
                    <td>@item.VentaProductos</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class=" form-group form-row">
        <label class="col-md-6">: @Model.Iva</label>
        <label class="col-md-6">IVA: @Model.Iva</label>
        <label class="col-md-6">Venta Total: @Model.VentaTotal</label>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>
