@model OpenCoolMart.Gui.Models.ProveedorRequestDto
@{
}
<!DOCTYPE html>
<head>
    
    <link href="~/css/Proveedor/Proveedor.css" rel="stylesheet" />
</head>
<body>
    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <div class="container-xl table-wrapper">
        <div id="content">
            <img src="~/Img/Imagen3.png" class="ribbon">
        </div>
        <br />
        <hr />
        <h1 class="text-center">Crear Proveedor</h1>
        <div class="form-group">
            <label class="col-md-12">Nombre</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-12">Dirección</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.Direccion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-12">Correo</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group form-row" style="margin:auto!important">
            <div class="col-md-4"></div>
            <input type="submit" value="Crear" class="btn btn-primary col-md-2" style="margin:10px" />
            <a asp-action="Index" asp-controller="Proveedor" class="btn btn-danger col-md-2" style="margin:10px">Cancelar</a>
        </div>

    </div>
    }

</body>