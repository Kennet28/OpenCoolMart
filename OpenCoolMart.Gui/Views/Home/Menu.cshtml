@{
    ViewData["Title"] = "Menu";
    Layout = "_LayoutPages";
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Open+Sans">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    
    <link href="~/css/Home/Menu.css" rel="stylesheet" />

</head>
<body>
<div class="row">
    <div class="col-md-12">
        <h2>Menú<b></b></h2>
        <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="0">
            <div class="carousel-inner">
                <div class="item carousel-item active">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="thumb-wrapper">
                                <div class="img-box">
                                    <img src="~/Img/cuenta.png" class="img-fluid" alt="logotipo">
                                </div>
                                <div class="thumb-content">
                                    <a class="btn btn-primary" asp-area="" asp-controller="Usuario" asp-action="Index">Usuarios</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="thumb-wrapper">
                                <div class="img-box">
                                    <img src="~/img/Empleado.png" class="img-fluid" alt="cuentas">
                                </div>
                                <div class="thumb-content">
                                    <a class="btn btn-primary" asp-area="" asp-controller="Empleado" asp-action="Index">Empleado</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="thumb-wrapper">
                                <div class="img-box">
                                    <img src="~/img/clientes.png" class="img-fluid" alt="clientes">
                                </div>
                                <div class="thumb-content">
                                    <a class="btn btn-primary" asp-area="" asp-controller="Cliente" asp-action="Index">Cliente</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="0">
            <div class="carousel-inner">
                <div class="item carousel-item active">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="thumb-wrapper">
                                <div class="img-box">
                                    <img src="~/img/Ventas.png" class="img-fluid" alt="ventas">
                                </div>
                                <div class="thumb-content">
                                    <h4></h4>
                                    <a class="btn btn-primary" asp-controller="Venta" asp-action="Index">Ventas</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="thumb-wrapper">

                                <div class="img-box">
                                    <img src="~/img/Productos.png" class="img-fluid" alt="productos">
                                </div>
                                <div class="thumb-content">
                                    <a class="btn btn-primary" asp-controller="Producto" asp-action="Index">productos</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="thumb-wrapper">
                                <div class="img-box">
                                    <img src="~/img/proveedor.png" class="img-fluid" alt="productos">
                                </div>
                                <div class="thumb-content">
                                    <a class="btn btn-primary" asp-controller="Proveedor" asp-action="Index">Proveedores</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="0">
            <div class="carousel-inner">
                <div class="item carousel-item active">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="thumb-wrapper">
                                <div class="img-box">
                                    <img src="~/img/Compra.png" class="img-fluid" alt="ventas">
                                </div>
                                <div class="thumb-content">
                                    <h4></h4>
                                    <a class="btn btn-primary" asp-controller="Compra" asp-action="Index">Compras</a>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
@section Scripts
{
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".wish-icon i").click(function () {
                $(this).toggleClass("fa-heart fa-heart-o");
            });
        });
    </script>
}
                                    		
