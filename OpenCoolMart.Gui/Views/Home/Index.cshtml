@model OpenCoolMart.Gui.Models.LoginModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Log In</title>
    <link href="~/css/Home/Index.css" rel="stylesheet" />
    
</head>

<body>

    <div id="content">
        <img src="~/img/Imagen3.png" class="ribbon">

    </div>
    <div class="login-form">
        @using (Html.BeginForm())
        {
            <div class="avatar">
                <img src="~/img/c015-icon-02-usericon-data-3711470.png" alt="avatar">
            </div>
            <h2 class="text-center">Inicio de Sesión</h2>
            <div class="form-group">
                @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                
                <h5>Correo</h5><br />
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <h5>Contraseña</h5><br />
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input id="boton" type="submit" value="Log in" class="btn btn-primary btn-lg btn-block" />
            </div>
        }

    </div>

</body>
</html>