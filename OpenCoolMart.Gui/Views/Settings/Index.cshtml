@model OpenCoolMart.Gui.Models.SettingsResponseDto

@{
    ViewBag.Title = "Configuraciones";
    Layout = "_layoutPages";
}

<h2 class="text-center">Configuraciones</h2>
@using (Html.BeginForm())
{
    <div class="form-horizontal align-content-center">
        <div class="form-group">
            <label>Numero de caja</label>
            <div class="col-md-1">
                @Html.EditorFor(model => model.Ncaja, new {htmlAttributes = new {@class = "form-control text-center"}})
            </div>
            <label>Ip de la caja</label>
            <div class="col-md-3">
                @Html.EditorFor(model => model.Ip, new {htmlAttributes = new {@class = "form-control text-center"}})
            </div>
        </div>
        
        <div class="form-group">
            <label>Ubicacion de respaldo</label>
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.RutaRespaldo,new { type = "file",htmlAttributes = new { @class = "form-control"} })
            </div>
        </div>
        <div class="form-group">
            <label>Conexión a base de datos</label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.BDConexion,new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-row align-content-md-center">
            <input type="submit" class="btn btn-primary" value="update">
        </div>
    </div>
}
