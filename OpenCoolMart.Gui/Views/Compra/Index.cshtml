@model IEnumerable<OpenCoolMart.Gui.Models.CompraResponseDto>
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="~/css/Compra/Create.css" rel="stylesheet" />

</head>
<body>
    <div id="content">
        <img src="~/Img/Imagen3.png" class="ribbon">
    </div>
    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-8"><h2>Compras</h2></div>
                        <div class="col-sm-4">
                            <div class="search-box">
                                <i class="material-icons">&#xE8B6;</i>
                                <input type="text" class="form-control" id="codigoprod" placeholder="Buscar Compras">
                            </div>
                        </div>
                    </div>
                    <div id="tabla">
                        <table id="tablacompras" class="table table-striped table-hover table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Fecha de Compra</th>
                                    <th>Precio total</th>
                                    <th>Proveedor</th>
                                    <th>Detalles</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                    @foreach (var item in Model)
                    {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.CreateAt</td>
                    <td>@item.PrecioTotal</td>
                    <td>@item.Proveedor.Nombre</td>
                    <td>
                        <a asp-controller="Compra" asp-route-Id="@item.Id" asp-action="Details" class="view" title="Ver" data-toggle="tooltip"><i class="material-icons">&#xE417;</i></a>
                    </td>
                </tr>}}

                            </tbody>
                        </table>
                    </div>
                </div>
                
                <div class="form-group">
                    <a asp-controller="Home" asp-action="Menu" class="btn btn-primary btn-lg  btn-block">Menú</a>
                </div>
                <div class="form-group">
                    <a asp-controller="Compra" asp-action="Create" class="btn btn-success btn-lg btn-block">Agregar Compra</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>