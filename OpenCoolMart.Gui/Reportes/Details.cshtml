@model OpenCoolMart.Gui.Models.VentaResponseDto
@{
    string empleado = Model.Empleado.Nombre;
    double subtotal = 0;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Nota de venta</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
</head>
<body>
<div class="row">
    <div class="text-center" style="margin-left: 150px;font-size: 35px;font-weight: bold">
        <label >OpenCoolMart</label>
    </div>
</div>
<div class="float-left row">
    <div style="margin-left: 150px;font-size: 24px;font-weight: bold">
        <label >Atendió: @empleado</label>
    </div>
    <div style="margin-left: 150px;font-size: 24px;font-weight: bold">
        <label >Lugar de expedicion: Merida, Yucatan</label>
    </div>
</div>

<div class="container-xl">
    <div class="row">
        <div class="text-right text-black-35 mr-5">
            <h2 style="font-size: 30px;font-weight: bold">NOTA DE VENTA</h2>
        </div>
    </div>
    <div class="row">
        <div class="float-right">
            <table class="table table-bordered border-dark" style="height: auto!important;width: auto!important; margin-right: 50px;" border="2px">
                <thead class="bg-dark text-white ">
                <th>Fecha</th>
                <th>Folio</th>
                </thead>
                <tbody>
                <tr>
                    <td >@Model.FechaVenta.Date.ToShortDateString()</td>
                    <td >@Model.Folio</td>
                </tr>
                </tbody>
            </table>
            
        </div>
    </div>
    <br/>
    <br/>
    <div>
        <table class="table table-bordered border-dark">
            <thead class="bg-dark text-white">
            <tr>
                <th>Codigo del producto</th>
                <th>Descripcion</th>
                <th>Precio Unitario</th>
                <th>Descuento</th>
                <th>Cantidad Comprada</th>
                <th>Importe</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.DetallesVentas)
            {
                <tr>
                    <td>@item.Producto.CodigoProducto</td>
                    <td>@item.Producto.Descripcion</td>
                    <td>@item.Producto.PrecioVenta</td>
                    <td>@item.Producto.Descuento</td>
                    <td>@item.CantiProd</td>
                    <td>@item.VentaProductos</td>
                </tr>
                subtotal = subtotal + item.VentaProductos;
            }
            </tbody>
        </table>
    </div>
    <div class="float-right">
        <table class="table table-bordered border-dark" style=" height: auto!important; width: auto!important;font-size:16px!important;">
            <tr>
                <td class="bg-dark text-white" >Subtotal:</td>
                <td > @subtotal </td>
            </tr>
            <tr>
                <td class="bg-dark text-white" >IVA:</td>
                <td > @Model.Iva</td>
            </tr>
            <tr>
                <td class="bg-dark text-white" >Venta Total:</td>
                <td > @Model.VentaTotal</td>
            </tr>
        </table>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>

